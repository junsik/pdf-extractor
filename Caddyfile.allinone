:8080 {
	encode gzip

	# Backend routes first
	handle /api/* {
		reverse_proxy 127.0.0.1:8000
	}
	handle /health {
		reverse_proxy 127.0.0.1:8000
	}
	handle /docs* {
		reverse_proxy 127.0.0.1:8000
	}
	handle /openapi.json {
		reverse_proxy 127.0.0.1:8000
	}

	# Everything else -> Next.js
	handle {
		reverse_proxy 127.0.0.1:3000
	}
}

